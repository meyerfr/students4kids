<%= simple_form_for @availability, wrapper: :inline_form, html: { class: "form-inline" }, wrapper_mappings: { boolean: :inline_boolean} do |form| %>
  <div class="row">
    <div class="col-auto">
      <%= form.input :start_time,
                     as: :datetime,
                     minute_step: 15,
                     selected: DateTime.current.beginning_of_hour.advance(hours: 1),
                     label: false
      %>
    </div>
    -
    <div class="col-auto">
      <%= form.input :end_time,
                     as: :time,
                     minute_step: 15,
                     selected: Time.current.beginning_of_hour.advance(hours: 4),
                     label: false
      %>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-2">
        <% if request.fullpath == "/availabilities" %>
          New Availability
        <% else %>
          Save Changes
        <% end %>
      </button>
    </div>
  </div>
<% end %>
