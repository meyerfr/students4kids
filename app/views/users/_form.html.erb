<%= simple_form_for @user do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :first_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.input :last_name, class: "form-control" %>
  </div>

  <div class="field">
    <p>Date of Birth</p>
    <%= form.date_field :dob, as: :select, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.input :phone, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.input :bio, as: :text, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.input :address, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.button :submit, 'Submit changes', class: "btn btn-red" %>
  </div>
<% end %>
