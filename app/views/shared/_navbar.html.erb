<div class="navbar navbar-expand-lg navbar-light navbar-sfk">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "hand-print-red.png" %>
  <% end %>

  <h1>Students for Kids</h1>

  <ul class="navbar-nav avatar-dropdown">
    <% if current_user %>
      <li class="nav-item">
        <%= link_to "COVID-19", corona_path, class: "nav-link" %>
      </li>
      <% if current_user.is_role?("parent") %>
        <li class="nav-item">
          <%= link_to "Babysitter finden", users_path, class: "nav-link" %>
        </li>
      <% elsif current_user.is_role?("sitter") %>
        <li class="nav-item">
          <%= link_to "Availabilities", availabilities_path, class: "nav-link" %>
        </li>
      <% end %>
      <li class="nav-item">
        <%= link_to "Bookings", bookings_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
    <% end %>
  </ul>
</div>
