<div class="navbar navbar-expand-lg navbar-light navbar-sfk">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "hand-print-red.png" %>
  <% end %>

  <h1>Students for Kids</h1>

  <ul class="navbar-nav avatar-dropdown">
    <% if current_user %>
      <% if current_user.is_role?("parent") %>
        <li class="nav-item active">
          <%= link_to "Babysitter finden", sitters_path, class: "nav-link" %>
        </li>
      <% end %>
      <li class="nav-item active">
        <%= link_to "COVID-19", corona_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.is_role?("admin") || !current_user.photo.attached? %>
          <i class="fas fa-user avatar dropdown-toggle avatar-bordered" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <% else %>
          <%= cl_image_tag(current_user.photo.key, width: 40, height: 40, gravity: 'face:center', crop: :fill, effect: :sharpen, class: 'avatar dropdown-toggle avatar-bordered', id: 'navbarDropdown', data: { toggle: "dropdown"}, 'aria-haspopup': true, 'aria-expanded': false) %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "mein Profil", public_send("#{current_user.class.to_s.downcase}_path", current_user), class: "dropdown-item" %>
          <%= link_to "meine Buchungen", bookings_path, class: 'dropdown-item' %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    <% else %>
      <li class="nav-item active">
        <%= link_to "Login", new_user_session_path, class: 'dropdown-item' %>
      </li>
    <% end %>
  </ul>
</div>
